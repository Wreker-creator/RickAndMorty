<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RickAndMortyApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#009F00</item>
        <item name="colorPrimaryVariant">#006300</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#39E535</item>
        <item name="colorSecondaryVariant">#269A23</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">

        <item name="windowSplashScreenBackground">?colorOnSurface</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_wrapper</item>
        <item name="postSplashScreenTheme">@style/Theme.RickAndMortyApp</item>
        <item name="iconTint">?colorSurface</item>
    </style>

    <style name="roundedImage" parent="ShapeAppearance.MaterialComponents.MediumComponent">

        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:scaleType">centerCrop</item>

    </style>

    <style name="textInputLayoutDefaultDesign" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

        <item name="boxCornerRadiusTopStart">@dimen/_10sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_10sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_10sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_10sdp</item>
        <item name="boxStrokeColor">?colorSurface</item>
        <item name="boxStrokeWidth">@dimen/_1sdp</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="errorEnabled">true</item>
        <item name="hintTextColor">?colorSurface</item>
        <item name="errorIconDrawable">@drawable/ic_error</item>
        <item name="errorIconTint">@color/error</item>
        <item name="android:textColorHint">?colorSurface</item>
        <item name="startIconTint">?colorSurface</item>
        <item name="endIconTint">?colorSurface</item>
        <item name="endIconMode">clear_text</item>
        <item name="errorTextColor">@color/error</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>

    </style>
    
    <style name="textInputEditTextDefaultDesign" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox.Dense">

        <item name="android:textColor">?colorSurface</item>
        <item name="android:padding">@dimen/_13sdp</item>
        <item name="android:inputType">text</item>
        <item name="maxLines">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/_13ssp</item>

    </style>

    <style name="inputTextLayoutDefault" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

        <item name="startIconTint">?colorOnSurface</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_10sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_10sdp</item>
        <item name="endIconTint">?colorOnSurface</item>
        <item name="boxStrokeWidth">@dimen/_1sdp</item>
        <item name="android:gravity">center</item>
        <item name="boxStrokeColor">?colorOnSurface</item>
        <item name="boxStrokeWidthFocused">@dimen/_2sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_10sdp</item>
        <item name="boxCornerRadiusTopStart">@dimen/_10sdp</item>
        <item name="errorEnabled">true</item>
        <item name="hintTextColor">?colorOnSurface</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">?colorSurface</item>
        <item name="errorIconTint">@color/error</item>
        <item name="errorIconDrawable">@color/error</item>
        <item name="errorTextColor">@color/error</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="android:textColorHint">?colorOnSurface</item>

    </style>

</resources>